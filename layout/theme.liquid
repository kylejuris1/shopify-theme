<!DOCTYPE html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#000">
  <link rel="canonical" href="{{ canonical_url }}">

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  <title>{{ page_title }}{% unless page_title contains shop.name %} â€“ {{ shop.name }}{% endunless %}</title>
  {% if page_description %}<meta name="description" content="{{ page_description | escape }}">{% endif %}

  {{ content_for_header }}

  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ 'theme-unikor.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'global.js' | asset_url }}" defer></script>
</head>
<body class="template-{{ template.name }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %} unikor-body">
  <a class="skip-link visually-hidden" href="#MainContent">{{ 'accessibility.skip_to_content' | t }}</a>

  {% section 'announcement-bar' %}
  {% section 'header' %}

  <main id="MainContent" class="main-content" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}
  {{ content_for_footer }}
</body>
</html>
