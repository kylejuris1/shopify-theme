<header class="unikor-header" role="banner">
  <div class="unikor-header__inner page-width">
    <nav class="unikor-header__nav-left" aria-label="Navigation principale">
      <a href="{{ routes.root_url }}">Accueil</a>
      <a href="{{ routes.collections_url }}">Produits</a>
      <a href="{{ routes.root_url }}pages/track-order">Suivre ma commande</a>
      <a href="{{ routes.root_url }}pages/contact">Nous contacter</a>
    </nav>
    <a href="{{ routes.root_url }}" class="unikor-header__logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 160 }}" alt="{{ shop.name }}" width="160" height="{{ 160 | divided_by: section.settings.logo.aspect_ratio | round }}">
      {% else %}
        <span class="unikor-header__logo-text">{{ shop.name }}</span>
      {% endif %}
    </a>
    <div class="unikor-header__right">
      <a href="{{ routes.account_url }}" class="unikor-header__icon unikor-header__icon--account" aria-label="Compte">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
      </a>
      <a href="{{ routes.cart_url }}" class="unikor-header__icon unikor-header__icon--cart" aria-label="Panier">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
        <span class="unikor-header__cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [{ "type": "image_picker", "id": "logo", "label": "Logo" }]
}
{% endschema %}
