{% comment %} Unikor content block: layout image_left | image_right, centered heading, then image + text {% endcomment %}
{% assign layout = section.settings.layout | default: 'image_left' %}
<section class="unikor-rich {% if section.settings.alt_bg %}unikor-rich--alt{% endif %}">
  <div class="page-width">
    <h2 class="unikor-rich__heading">{{ section.settings.heading }}</h2>
    <div class="unikor-rich__grid unikor-rich__grid--{{ layout }}">
      <div class="unikor-rich__media">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 600 }}" alt="{{ section.settings.heading | escape }}" width="600" loading="lazy">
        {% else %}
          <div class="unikor-rich__placeholder"><span>Image</span></div>
        {% endif %}
        {% if section.settings.overlay_text != blank %}
          <div class="unikor-rich__overlay">{{ section.settings.overlay_text }}</div>
        {% endif %}
      </div>
      <div class="unikor-rich__body">
        {{ section.settings.body }}
      </div>
    </div>
    {% if section.settings.button_label != blank %}
      <div class="unikor-rich__cta">
        <a href="{{ section.settings.button_link | default: '#' }}" class="unikor-btn unikor-btn--black">{{ section.settings.button_label }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Rich content (Unikor)",
  "class": "section-rich-content",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "select", "id": "layout", "label": "Layout", "options": [{ "value": "image_left", "label": "Image left" }, { "value": "image_right", "label": "Image right" }], "default": "image_left" },
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "overlay_text", "label": "Overlay text (e.g. Dry Nights Await With NightGuardâ„¢)" },
    { "type": "html", "id": "body", "label": "Content (HTML)" },
    { "type": "checkbox", "id": "alt_bg", "label": "Alternate background", "default": false },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ]
}
{% endschema %}
