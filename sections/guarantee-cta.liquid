<section class="unikor-guarantee">
  <div class="page-width unikor-guarantee__grid">
    <div class="unikor-guarantee__media">
      {% if section.settings.video_image != blank %}
        <img src="{{ section.settings.video_image | image_url: width: 500 }}" alt="" width="500" height="320" loading="lazy">
      {% else %}
        <div class="unikor-guarantee__placeholder"><span>Video / image placeholder</span></div>
      {% endif %}
    </div>
    <div class="unikor-guarantee__content">
      <h2 class="unikor-guarantee__title">{{ section.settings.heading | default: 'End Bedwetting or Get Your Money Back' }}</h2>
      <div class="unikor-guarantee__text">
        {% if section.settings.body != blank %}{{ section.settings.body }}{% else %}<p>Try out the NightGuard™ Bedwetting Alarm for 60 days. If you don't see a noticeable improvement in your child's bedwetting, just let us know. We'll refund every penny, no questions asked!</p>{% endif %}
      </div>
      <p class="unikor-guarantee__risk">Give the NightGuard™ a try <strong>risk free.</strong></p>
      <p class="unikor-guarantee__ready">Ready to Help Your Child Stay Dry?</p>
      <p class="unikor-guarantee__get">Get the NightGuard Bedwetting Alarm Today!</p>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link | default: '/cart' }}" class="unikor-btn unikor-btn--black unikor-guarantee__btn">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Guarantee + CTA",
  "class": "section-guarantee-cta",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "End Bedwetting or Get Your Money Back" },
    { "type": "html", "id": "body", "label": "Body HTML" },
    { "type": "image_picker", "id": "video_image", "label": "Video / image" },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Get it now" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ]
}
{% endschema %}
