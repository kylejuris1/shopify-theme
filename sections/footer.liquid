<footer class="unikor-footer" role="contentinfo">
  <div class="unikor-footer__inner page-width">
    <div class="unikor-footer__grid">
      <div class="unikor-footer__col unikor-footer__col--logo">
        <a href="{{ routes.root_url }}" class="unikor-footer__logo">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | image_url: width: 140 }}" alt="{{ shop.name }}" width="140">
          {% else %}
            <span>{{ shop.name }}</span>
          {% endif %}
        </a>
        <div class="unikor-footer__country">
          <label for="footer-country">Country/region</label>
          <select id="footer-country" class="unikor-footer__select" aria-label="Country/region">
            <option>United States (USD $)</option>
          </select>
        </div>
      </div>
      <div class="unikor-footer__col">
        <h4 class="unikor-footer__heading">Support</h4>
        <ul class="unikor-footer__links">
          <li><a href="{{ shop.policies.privacy_policy.url | default: '#' }}">Privacy Policy</a></li>
          <li><a href="{{ shop.policies.refund_policy.url | default: '#' }}">Return Policy</a></li>
          <li><a href="{{ routes.root_url }}pages/shipping">Shipping Info</a></li>
          <li><a href="{{ shop.policies.terms_of_service.url | default: '#' }}">Terms of Service</a></li>
        </ul>
      </div>
      <div class="unikor-footer__col">
        <h4 class="unikor-footer__heading">About</h4>
        <p class="unikor-footer__about">{{ section.settings.about_text | default: "At Harba, we believe in making parents' lives easier with innovative, high-quality products that provide real solutions to everyday challenges." }}</p>
        <div class="unikor-footer__payments">
          {% if section.settings.show_payment_icons %}
            <span class="unikor-footer__payment-placeholder">Shop Pay, Visa, Mastercard, American Express, Discover, Apple Pay, Google Pay, PayPal</span>
          {% endif %}
        </div>
      </div>
    </div>
    <p class="unikor-footer__copyright">Â© {{ 'now' | date: '%Y' }}, {{ shop.name }}</p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "textarea", "id": "about_text", "label": "About text" },
    { "type": "checkbox", "id": "show_payment_icons", "label": "Show payment icons", "default": true }
  ]
}
{% endschema %}
