<section class="hero-banner" style="text-align: center; padding: 4rem 1rem;">
  <div class="page-width">
    {% if section.settings.heading != blank %}<h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;">{{ section.settings.heading }}</h1>{% endif %}
    {% if section.settings.subtext != blank %}<p style="font-size: 1.125rem; color: #6b7280;">{{ section.settings.subtext }}</p>{% endif %}
    {% if section.settings.show_button and section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn--primary" style="margin-top: 1rem;">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "textarea", "id": "subtext", "label": "Subtext" },
    { "type": "checkbox", "id": "show_button", "label": "Show button", "default": true },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ]
}
{% endschema %}
