<section class="unikor-reviews">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="unikor-reviews__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          {% if block.settings.heading != blank %}
            <h3 class="unikor-reviews__block-heading" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h3>
          {% endif %}
        {% when 'text' %}
          {% if block.settings.content != blank %}
            <div class="unikor-reviews__block-content" {{ block.shopify_attributes }}>{{ block.settings.content }}</div>
          {% endif %}
        {% when 'html' %}
          {% if block.settings.html != blank %}
            <div class="unikor-reviews__block-html" {{ block.shopify_attributes }}>{{ block.settings.html }}</div>
          {% endif %}
      {% endcase %}
    {% endfor %}
    <!-- Start of Judge.me code -->
    {% if product %}
      {% assign has_legacy = false %}
      {% if product.metafields.judgeme.widget.size > 20 %}
        {% assign has_legacy = true %}
      {% endif %}
      <div style="clear:both"></div>
      <div id="judgeme_product_reviews" class="jdgm-widget jdgm-review-widget" data-product-title="{{ product.title | escape }}" data-id="{{ product.id }}" data-product-id="{{ product.id }}" data-widget="review" data-auto-install="false" data-shop-reviews-count="{{ shop.metafields.judgeme.shop_reviews_count | default: 0 | escape }}" data-entry-point="review_widget.js" data-entry-key="review-widget/main.js">
        {% if has_legacy %}
          <div class="jdgm-legacy-widget-content" style="display: none;">{{ product.metafields.judgeme.widget }}</div>
        {% endif %}
      </div>
      {% if product.metafields.judgeme.review_widget_data %}
        <script>jdgm.data ||= {}; jdgm.data.reviewWidget ||= {}; jdgm.data.reviewWidget[{{ product.id }}] = {{ product.metafields.judgeme.review_widget_data }}</script>
      {% endif %}
    {% else %}
      <p class="unikor-reviews__no-product">Reviews appear on product pages.</p>
    {% endif %}
    <!-- End of Judge.me code -->
  </div>
</section>

{% schema %}
{
  "name": "Reviews",
  "class": "section-reviews",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        { "type": "textarea", "id": "content", "label": "Content" }
      ]
    },
    {
      "type": "html",
      "name": "Custom HTML",
      "settings": [
        { "type": "html", "id": "html", "label": "HTML" }
      ]
    }
  ]
}
{% endschema %}
